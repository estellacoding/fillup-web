# 應用程式設定
APP_NAME="FillUp! Hydration API"
DEBUG=false

# 資料庫設定
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=fillup_hydration
POSTGRES_PORT=5432

# 或者使用完整的資料庫 URL
# DATABASE_URL=postgresql://user:password@localhost:5432/fillup_hydration

# JWT 設定
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS 設定 (以逗號分隔)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# 飲水記錄設定
MAX_VOLUME_PER_RECORD=2000
MIN_VOLUME_PER_RECORD=1
DEFAULT_DAILY_GOAL=2000